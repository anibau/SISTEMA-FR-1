# Configuración de la aplicación
NODE_ENV=development
PORT=3000
APP_NAME=Sistema Francachela Backend
APP_VERSION=1.0.0

# Configuración de base de datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=francachela_user
DB_PASSWORD=francachela_password
DB_DATABASE=francachela_db
DB_SYNCHRONIZE=true
DB_LOGGING=true

# Configuración JWT
JWT_SECRET=tu_jwt_secret_super_seguro_aqui_cambiar_en_produccion
JWT_EXPIRES_IN=24h

# Configuración CORS
CORS_ORIGIN=http://localhost:3001,http://localhost:3000
CORS_CREDENTIALS=true

# Configuración de archivos
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Configuración de notificaciones
NOTIFICATION_ENABLED=true
EMAIL_ENABLED=false
SMS_ENABLED=false

# Configuración de webhooks
WEBHOOK_SECRET=webhook_secret_key
WEBHOOK_TIMEOUT=5000

# Configuración de cache
CACHE_TTL=300
CACHE_MAX_ITEMS=100

# Configuración de logs
LOG_LEVEL=debug
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs

# Configuración de puntos por defecto
DEFAULT_POINTS_PER_SOL=1
DEFAULT_POINTS_EXPIRY_DAYS=365

# Configuración de delivery
DELIVERY_ENABLED=true
DELIVERY_RADIUS_KM=10
DELIVERY_FEE=5.00

# Configuración de promociones
PROMO_AUTO_APPLY=true
PROMO_MAX_DISCOUNT_PERCENT=50

# Configuración de backup
BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

